<LinearLayout android:id="@+id/LinearLayout01"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:orientation="vertical"
	android:layout_height="fill_parent" android:background="@drawable/background" android:gravity="bottom">
	<TextView android:id="@+id/instruction_record"
		android:layout_height="wrap_content" android:textColor="#000" android:textSize="14px" android:layout_width="fill_parent" android:gravity="center" android:layout_marginLeft="50px" android:layout_marginRight="50px" android:layout_marginBottom="10px" android:text="Press button to start recording the gesture"></TextView><TextView android:layout_height="wrap_content" android:textColor="#000" android:textSize="14px" android:id="@+id/instruction_record_1" android:layout_width="fill_parent" android:layout_marginLeft="40px" android:gravity="center" android:layout_marginBottom="10px" android:layout_marginRight="40px" android:text="Make a short movement with your phone in a space and remember the gesture"></TextView>
	
	<TextView android:layout_height="wrap_content" android:id="@+id/instruction_record_2" android:textColor="#000" android:textSize="14px" android:layout_width="fill_parent" android:gravity="center" android:layout_marginBottom="10px" android:text="Press the button again when finished"></TextView>
	<Button android:id="@+id/Button01" android:text="start record"
		android:layout_width="fill_parent" android:background="@drawable/record_gest_button_up" android:layout_height="wrap_content" android:layout_gravity="bottom" android:textSize="20px"></Button>


</LinearLayout>
