<LinearLayout android:id="@+id/LinearLayout01"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:focusable="true" android:clickable="true"
	android:layout_height="fill_parent" android:layout_width="fill_parent"
	android:orientation="vertical">
	
	


	
	
<ImageButton android:layout_height="wrap_content" android:layout_gravity="center_horizontal" android:id="@+id/start_stop_service" android:background="@drawable/banner_up" android:layout_width="fill_parent"></ImageButton><RelativeLayout android:id="@+id/RelativeLayout01"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content">
	<TextView android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		style="?android:attr/listSeparatorTextViewStyle"
		android:text="Gestures service control" android:id="@+id/control_area"
		android:layout_margin="3px"/>
	<TextView android:layout_height="wrap_content"
		android:text="Gestures Service is running"
		android:id="@+id/text_about_service_state"
		android:layout_below="@+id/control_area"
		android:layout_margin="3px" android:layout_width="fill_parent"></TextView>
	<TextView android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Gestures service listens to your phone movements and launches specified application, if recognized action matches the gesture recorded earlier by you."
		android:id="@+id/program_description"
		android:textAppearance="?android:attr/textAppearanceSmall"
		android:layout_below="@+id/text_about_service_state" android:layout_toLeftOf="@+id/service_start"
		android:layout_margin="3px"></TextView>
	
</RelativeLayout>

	




</LinearLayout>
